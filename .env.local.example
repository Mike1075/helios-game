# Helios Game - 本地开发环境变量示例
# 复制此文件为 .env.local 并填入你的实际值用于本地测试

# AI Gateway (仅在云端部署时需要)
VERCEL_AI_GATEWAY_URL=your_ai_gateway_url
VERCEL_AI_GATEWAY_API_KEY=your_ai_gateway_api_key

# Supabase (仅在云端部署时需要)  
SUPABASE_URL=your_supabase_url
SUPABASE_SERVICE_KEY=your_supabase_service_key

# Zep Memory Service (仅在云端部署时需要)
ZEP_API_KEY=your_zep_api_key

# 前端环境变量
NEXT_PUBLIC_SUPABASE_URL=your_public_supabase_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_public_supabase_anon_key

# 本地开发模式 (设置为true时使用mock数据)
LOCAL_DEV_MODE=true